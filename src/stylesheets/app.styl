@import 'utils/media-queries'

@import "header"
@import "hero"
@import "slideshow"
@import "form"
@import "footer"
@import "description"
@import "bio"
@import "inspiration"
@import "video"

*, *:before, *:after
  box-sizing: border-box

body
  min-width: 375px
  width: 100%
  margin: auto
  color: #363636
  font-family: Open Sans, sans-serif

section
  margin-bottom: 0

.section-header
  margin: 0 auto
  text-align: center
  padding: 10px

  +below(tablet-width)
    padding: 5px

  h2
    margin-bottom: 30px
    font-size: 2.625em
    font-weight: 300
    letter-spacing: 0
    line-height: 1em

    +below(tablet-width)
      font-size: 1.625em

  h4
    margin-bottom: 50px
    font-size: 1.25em
    letter-spacing: 0
    line-height: 49px
